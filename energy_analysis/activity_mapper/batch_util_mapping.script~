#!/bin/bash

if [ $# -lt 3 ]; then
  echo "Usage: ./batch_util_mapping.script <targeted_package_name> <data_folder> <context? 1:Y/2:N>"
  exit
fi

for p in $2/*_util.log
  do
    p=${p##*/}
    p=${p%_util.log}
    ## args: data_dir, package_name, targeted_log
    R --vanilla --args $1 $2 $p $3 < app_util_mapping.R > output.txt
  done

echo "Done!"


